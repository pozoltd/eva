{% verbatim %}
    <div class="js-section js-section-{{id}} js-section-{{id}}-{{section.id}}" data-id="{{section.id}}">
        <hr />
        <div class="left">
            <h2>SECTION:</h2>
            <h4>{{section.title}}</h4>
            <small>{{section.attr}}</small>
        </div>
        <div class="right">
            <select class="no-chosen js-add-block">
                <option value="">Add a block</option>
                {{#each blockOptions}}
                    <option value="{{id}}">{{title}}</option>
                {{/each}}
            </select>
            {{#compare idx 0 operator=">"}}<a href="#" class="js-up text-muted"><i class="fa-lg fa fa-angle-up"></i></a>{{/compare}}
            {{#compare idx total operator="<"}}<a href="#" class="js-down text-muted"><i class="fa-lg fa fa-angle-down"></i></a>{{/compare}}
            {{#compare section.status 1 operator="=="}}<a href="#" class="js-status-toggle text-info" data-status="0" data-type="section"><i class="fa-lg fa fa-toggle-on"></i></a>{{/compare}}
            {{#compare section.status 0 operator="=="}}<a href="#" class="js-status-toggle text-danger" data-status="1" data-type="section"><i class="fa-lg fa fa-toggle-off"></i></a>{{/compare}}
            <a href="#" class="text-success js-edit-section"><i class="fa-lg fa fa-pencil"></i></a>
            <a href="#" class="text-danger"><i class="fa-lg fa fa-times js-delete-section"></i></a>
        </div>
        <div class="clearfix first-row"></div>
        <div class="js-blocks section-blocks">
            <div class="panel panel-default js-no-blocks" style="display: none;">
                <div class="panel-heading">
                    <div>
                        <h4>&nbsp;</h4>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endverbatim %}